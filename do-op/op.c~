int sous (int a, int b)
{
  return (a - b);
}

int mult (int a, int b)
{
  return (a * b);
}

int div (int a, int b)
{
  if (b == 0)
    return (-5);
  a = a / b;
  return (a);
}

int mod (int a, int b)
{
  if (b == 0)
    return (-5);
  return (a % b);
}

int add (int a, int b)
{
  return (a + b);
}
